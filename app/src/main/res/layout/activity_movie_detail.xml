<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.devinwells.poppies.MovieDetail"
        android:rowCount="4"
        android:columnCount="1">

        <TextView
            android:id="@+id/tv_movie_detail_title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:layout_row="0" />

        <!--<TextView-->
        <!--android:id="@+id/tv_movie_detail_ur"-->
        <!--android:textSize="50dp"-->
        <!--android:textColor="@color/colorAccent"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="15dp"-->
        <!--android:layout_row="1"-->
        <!--android:layout_column="1"-->
        <!--android:textAlignment="center"-->
        <!--android:layout_gravity="center"/>-->

        <RatingBar
            android:id="@+id/rb_movie_detail_rating"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rating="8.1"
            android:isIndicator="true"
            android:stepSize=".1"
            android:numStars="10"
            android:layout_row="1" />

        <ImageView
            android:id="@+id/iv_movie_detail_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_row="2" />

        <TextView
            android:id="@+id/tv_movie_detail_rd"
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_movie_detail_plot"
            android:textColor="@color/colorText"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="50dp"
            android:layout_row="2" />
    </GridLayout>
</ScrollView>